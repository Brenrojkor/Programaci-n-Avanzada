@model IEnumerable<ProyectoG2_Pokedex.Models.UsuariosModel>
<link href="~/css/crudusuarios.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">

<div class="pokedex-container">
<h1 class="title">Gestionar Usuarios</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Usuario</th>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.IdUsuario</td>
                <td>@usuario.Usuario</td>
                <td>@usuario.NombreUsuario</td>
                <td>@usuario.Rol</td>
                <td>
                        <a asp-action="Editar" asp-route-id="@usuario.IdUsuario" class="btn btn-edit">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@usuario.IdUsuario" class="btn btn-delete">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Agregar" class="btn btn-add">Agregar Nuevo Usuario</a>
</div>

