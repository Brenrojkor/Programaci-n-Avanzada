@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img src="~/images/logopokemon1.png" alt="Logo Pokémon" class="pokemon-logo mb-4" />
    <div class="phone-simulator">
        <div class="phone-header">
            Mensajeria
        </div>
        <div class="phone-body">
            <!-- Simulación de mensajes -->
            <div class="message received">Hola, ¿cómo estás?</div>
            <div class="message sent">¡Todo bien, gracias!</div>
        </div>
        <div class="phone-footer">
            <input type="text" class="message-input" placeholder="Escribe un mensaje..." />
            <button class="send-button">Enviar</button>
        </div>
    </div>
</div>
