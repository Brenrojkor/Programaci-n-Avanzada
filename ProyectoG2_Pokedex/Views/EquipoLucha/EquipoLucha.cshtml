@model IEnumerable<ProyectoG2_Pokedex.Models.EquipoLuchaModel>

<link href="~/css/crudusuarios.css" rel="stylesheet" />


<h2 class="title-equipo text-center">Equipo de Lucha</h2>
<div class="text-center">
<div class="equipo-container">
       <table class="tabla-equipo">
           <thead>
               <tr>
                   <th>Nombre Equipo</th>
                   <th>Id Usuario</th>
                   <th>Acciones</th>
               </tr>
           </thead>
       <tbody>
            @foreach (var equipo in Model)
            {
                <tr>
                    <td>@equipo.NombreEquipo</td>
                    <td>@equipo.IdUsuario</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@equipo.NombreEquipo" class="btn btn-edit">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@equipo.NombreEquipo" class="btn btn-delete">Eliminar</a>
                    </td>
                </tr>
            }
       </tbody>
       </table>
    </div>
    <a asp-action="Agregar" class="btn btn-add">Agregar Nuevo Equipo</a>
</div>


