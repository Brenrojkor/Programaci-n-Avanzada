@model IEnumerable<ProyectoG2_Pokedex.Models.EnfermeriaModel>

<h2>Enfermería</h2>

@if (TempData["Mensaje"] != null)

{
    <div class="alert alert-info">
        @TempData["Mensaje"]
    </div>
}

<div class="enfermeria-container">
    <table class="tabla-enfermeria">
        <thead>
            <tr>
                <th>Pokémon</th>
                <th>Dueño</th>
                <th>Padecimiento</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pokemon in Model)
            {
                <tr>
                    <td>@pokemon.NombrePokemon</td>
                    <td>@pokemon.NombreDueño</td>
                    <td>@pokemon.Padecimiento</td>
                    <td>@pokemon.Estado</td>
                    <td>
                        <form asp-action="Curar" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@pokemon.AtencionID" />
                            <button class="btn btn-success" type="submit">Curar</button>
                        </form>
                        <form asp-action="Eliminar" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@pokemon.AtencionID" />
                            <button class="btn btn-danger" type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<a asp-action="Agregar" class="btn btn-primary">Agregar Pokémon</a>

<style>
    .enfermeria-container {
        max-width: 100%;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
    }

    .tabla-enfermeria {
        width: 100%;
        border-collapse: collapse;
    }

        .tabla-enfermeria th, .tabla-enfermeria td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .tabla-enfermeria th {
            background-color: #007bff;
            color: white;
        }

        .tabla-enfermeria tr:nth-child(even) {
            background-color: #f2f2f2;
        }
</style>
