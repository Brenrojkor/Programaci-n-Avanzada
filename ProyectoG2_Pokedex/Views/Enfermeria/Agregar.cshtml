@model ProyectoG2_Pokedex.Models.UsuariosModel

<h2>Crear Usuario</h2>

<form asp-action="Agregar">
    <div class="form-group">
        <label for="Usuario">Usuario</label>
        <input asp-for="Usuario" class="form-control" />
    </div>
    <div class="form-group">
        <label for="NombreUsuario">Nombre Completo</label>
        <input asp-for="NombreUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Contrasena">Contraseña</label>
        <input asp-for="Contrasena" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Rol">Rol</label>
        <select asp-for="Rol" class="form-control">
            <option>Admin</option>
            <option>Entrenador</option>
            <option>Enfermera</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

